$light-brick-1: hsl(6, 100%, 98%);
$light-brick-2: hsl(6, 100%, 97%);
$light-brick-3: hsl(6, 100%, 93%);
$light-brick-4: hsl(6, 100%, 88%);
$light-brick-5: hsl(6, 100%, 83%);
$light-brick-6: hsl(6, 100%, 78%);
$light-brick-7: hsl(6, 100%, 73%);

$brick-1: hsl(6, 75%, 40%);
$brick-2: hsl(6, 75%, 25%);

$violet-1: hsl(274, 25%, 90%);
$violet-3: hsl(274, 25%, 80%);
$violet-4: hsl(274, 25%, 60%);
$violet-5: hsl(274, 25%, 50%);

$light-ocean-1: hsl(186, 100%, 98%);
$light-ocean-2: hsl(186, 100%, 93%);
$light-ocean-3: hsl(186, 100%, 88%);
$light-ocean-4: hsl(186, 100%, 83%);
$light-ocean-5: hsl(186, 100%, 78%);

$ocean-1: hsl(186, 100%, 28%);
$ocean-2: hsl(186, 100%, 23%);

$grey-ocean-1: hsl(186, 15%, 90%);
$grey-ocean-2: hsl(186, 15%, 75%);

$green-1: hsl(140, 55%, 92%);
$green-2: hsl(140, 70%, 40%);
$green-3: hsl(140, 55%, 25%);
$green-2: hsl(140, 70%, 40%);
$green-3: hsl(140, 55%, 25%);

$cream-1: hsl(36, 100%, 98%);
$cream-2: hsl(36, 100%, 94%);
$cream-3: hsl(36, 100%, 88%);
$cream-4: hsl(36, 100%, 83%);
$cream-5: hsl(36, 100%, 78%);
$cream-6: hsl(36, 100%, 73%);
$cream-7: hsl(36, 90%, 55%);
$cream-8: hsl(36, 90%, 45%);

$cappuccino-1: hsl(36, 100%, 30%);
$cappuccino-2: hsl(36, 100%, 25%);
$cappuccino-3: hsl(36, 100%, 18%);

/* Color Palette */

$colors: (
  'light-brick-1': $light-brick-1,
  'light-brick-2': $light-brick-3,
  'light-brick-3': $light-brick-4,
  'light-brick-4': $light-brick-5,
  'light-brick-5': $light-brick-6,
  'light-brick-6': $light-brick-7,
  'brick-1': $brick-1,
  'brick-2': $brick-2,
  'light-ocean-1': $light-ocean-1,
  'light-ocean-2': $light-ocean-2,
  'light-ocean-3': $light-ocean-3,
  'light-ocean-4': $light-ocean-4,
  'light-ocean-5': $light-ocean-5,
  'ocean-1': $ocean-1,
  'ocean-2': $ocean-2,
  'cream-1': $cream-1,
  'cream-2': $cream-2,
  'cream-3': $cream-3,
  'cream-4': $cream-4,
  'cream-5': $cream-5,
  'cream-6': $cream-6,
  'cream-7': $cream-7,
  'cappuccino-1': $cappuccino-1,
  'cappuccino-2': $cappuccino-2,
  'cappuccino-3': $cappuccino-3,
);

#toggle-palette {
  margin-top: 30px;
  margin-left: 20px;
}

#color-palette {
  display: flex;
  flex-wrap: wrap;

  &.hidden {
    display: none;
  }
}

.color-div {
  width: 100px;
  height: 100px;
  position: relative;
  margin: 30px 20px;
}

.color-label {
  position: absolute;
  top: 105%;
}

@each $color-name, $color in $colors {
  .#{$color-name} {
    background-color: $color;
  }
}

