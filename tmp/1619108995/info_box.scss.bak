.info-box {
  width: $w-info;
  height: $h-info;
  border: 4px solid black;
  border-radius: 10px;
  background: $light-ocean-2;
  border: 2px solid $ocean-1;
  display: grid;
  grid-template-rows: 1fr 2fr 1.5fr;
  overflow: hidden;
}

.possibility-icon {
  height: 100%;
  width: 100%;
  position: absolute;
  // font-size: $sz-info-square-poss;
  font-size: $fnt-sz-info-poss-icon;
  display: flex;
  align-items: center;
  justify-content: center;
}

@mixin possibilities {
  display: flex;
  width: 95%;
  margin: 3% auto;
  justify-content: space-between;
  align-items: center;
}

@mixin possibilities_grid {
  @include ord-grid-container(3, 3);
  // display: flex;
  width: 95%;
  margin: 3% auto;
  justify-content: space-between;
  align-items: center;
}

@mixin possibilities_child {
  position: relative;
  user-select: none;
  width: $sz-info-square-poss;
  height: $sz-info-square-poss;
  width: $sz-info-poss;
  height: $sz-info-poss;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer; 

  &--disabled { 
    cursor: not-allowed;
  }
}

@mixin possibilities_num($hover-selector) {
  @include possibilities_child();

  // font-size: 2.3vw;
  font-size: $fnt-sz-info-poss-val;
  font-weight: 300;

  .no-hover {
    display: flex;
  }

  .hover {
    display: none;
  }

  &#{$hover-selector} {
    .hover {
      display: flex;
    }
    
    .no-hover {
      display: none;
    }
  }
}

@mixin possibilities_btn {
  @include possibilities_child();

  // font-size: 2.6vw;
  font-size: $fnt-sz-info-poss-btn;
}

.square-info {
  @include possibilities();
  grid-row: 1;
}

.square-info_possibility {
  $hover-selector: ':hover:not(&--disabled):not(&--chosen):not(.prevent-hover)';
  
  @include possibilities_num($hover-selector);
  color: $ocean-2;

  &--chosen {
    color: $green-2;
    // font-size: 2.5vw;
    font-size: 1.08em;
    font-weight: 600;
  }

  &--unchosen {
    visibility: hidden;
  }

  &--square-eliminated,
  &--staged-eliminated {
    color: $brick-1;
  }
  
  &--auto-eliminated,
  &--collection-eliminated,
  &--disabled  {
    & > span {
      opacity: 0.2;
    }
  }
  
  &--mistake {
    &::before {
      content: '';
      position: absolute;
      bottom: -6%;
      background: $cream-5;
      height: 12%;
  
      animation: wipe-in-out 800ms forwards;
    }
  
    & > span {
      animation: lift 800ms forwards;
    }
  }

  &--staged-eliminated#{$hover-selector} {
    color: $ocean-2;
  }

  &:not(&--square-eliminated):not(&--staged-eliminated)#{$hover-selector} {
    color: $brick-1;
  }
}

.square-info_btn {
  @include possibilities_btn();
  color: $ocean-2;

  &--disabled {
    opacity: 0.2;
  }
}

.collection-combos {
  grid-row: 2;
}

.combo {
  &--eliminated {
    color: $brick-1;
  }
}

.combo--eliminated {
}

.collection-filter {
  grid-row: 3;
  position: relative;

  &::before {
    display: block;
    content: '';
    height: 50px;
    width: 100%;
    position: absolute;
    bottom: 100%;
  }

  &--and {
    background-color: $green-1;
    &::before {
      background: linear-gradient(0deg, $green-1, $light-ocean-2);
    }
  }
  
  &--not {
    background-color: $light-brick-2;
    &::before {
      background: linear-gradient(0deg, $light-brick-2, $light-ocean-2);
    }
  }
  
  &--or {
    background-color: $cream-2;
    &::before {
      background: linear-gradient(0deg, $cream-2, $light-ocean-2);
    }
  }
}

.filter-possibilities {
  @include possibilities();
}

.filter-possibility {
  $hover-selector: ':hover';
  @include possibilities_num($hover-selector);
  // width: 3.4vw;
  // height: 3.4vw;

  &:hover:not(.prevent-hover) {
    .possibility-icons--hover {
      display: flex;  
    }
    .possibility-icons--no-hover {
      display: none;  
    }
  }

  &--required,
  &--hover-required:hover:not(.prevent-hover) {
    color: $green-2;
    font-weight: 400;
  }

  &--eliminated,
  &--hover-eliminated:hover:not(.prevent-hover) {
    color: $brick-1;
  }

  &--none,
  &--hover-none:hover:not(.prevent-hover),
  &--alternative,
  &--hover-alternative:hover:not(.prevent-hover) {
    // color: $violet-4;
    color: $ocean-2;
  }

  // &--alternative,
  // &--hover-alternative:hover:not(.prevent-hover) {
  //   border: #{'min(2.5px, .25vw)'} dotted $green-2;
  //   // border: 3px dotted $cream-8;
  //   border-radius: .4vw;
  // }

  &--not-allowed {
    cursor: not-allowed;
  }
}

.possibility-icons {
  height: 100%;
  width: 100%;
  position: absolute;
}

.possibility-icons--hover {
  display: none;
}

.possibility-icon--small {
  font-size: 90%;
  opacity: 0.9;
}

.possibility-icon--alternative {
  font-size: $fnt-sz-info-poss-icon--lrg;
  color: $green-2;
}

.filter_btn {
  @include possibilities_btn();

  // color: $violet-4;
  color: $ocean-2;

  &--disabled {
    opacity: 0.2;
  }
}

.filter-tabs {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  justify-items: center;
  // width: 90%;
}

.filter_mode-btn {
  padding-bottom: 5px;
  outline: none;
  border-bottom-width: 3px;
  border-bottom-style: solid;

  &--selected {
    font-weight: bold;
    border-bottom-width: 7px;

  }

}

#filter_and {
  // color: $green-3;
  border-color: $green-3;
  grid-column: 1;
}

#filter_not {
  // color: $brick-2;
  border-color: $brick-2;
  grid-column: 2;
}

#filter_or {
  // color: $cappuccino-1;
  border-color: $cappuccino-1;
  grid-column: 3;
}

