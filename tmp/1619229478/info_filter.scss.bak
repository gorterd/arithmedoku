  //   }
  // }
}

.filter-possibilities {
  @include possibilities();
}

.filter-possibility {
  $hover-selector: ':hover';
  @include possibilities_num($hover-selector);
  // width: 3.4vw;
  // height: 3.4vw;

  &:hover:not(.prevent-hover) {
    .possibility-icons--hover {
      display: flex;  
    }
    .possibility-icons--no-hover {
      display: none;  
    }
  }

  &--required,
  &--hover-required:hover:not(.prevent-hover) {
    color: $green-3;
    font-weight: 600;
    font-size: 2.6vw;
  }

  &--eliminated,
  &--hover-eliminated:hover:not(.prevent-hover) {
    color: $brick-1;
  }

  &--none,
  &--hover-none:hover:not(.prevent-hover),
  &--alternative,
  &--hover-alternative:hover:not(.prevent-hover) {
    // color: $violet-4;
    color: $ocean-2;
  }

  &--alternative,
  &--hover-alternative:hover:not(.prevent-hover) {
    &::after {
      content: '';
      position: absolute;
      bottom: -8%;
      background: $violet-3;
      height: 13%;
      width: 70%;
      border-radius: 10px;
    }
  }

  &--not-allowed {
    cursor: not-allowed;
    opacity: 0.7;
  }

  &--disabled {
    opacity: 0.2;
  }
}

.filter_btn {
  @include possibilities_btn();

  color: $ocean-2;

  &--disabled {
    opacity: 0.2;
  }

  &:hover:not(&--disabled) {
    color: darken($ocean-2, 3);
    text-shadow: 0.3px 0.3px 1px darken($ocean-2, 5);
  }
}

.filter-tabs {
  display: grid;
  grid-template-columns: repeat(3, $w-info-tab);
  justify-items: center;
  margin: 0 0 20px 0;
}

.filter_mode-btn {
  padding-bottom: 0.3vw;
  outline: none;
  color: $grey-ocean-4;
  font-weight: bold;
  font-size: #{'min(20px, 1.3vw)'};
  position: relative;
  // left: 0.2vw;

  &--selected {
    color: $grey-ocean-5;
  }
}

#filter-tab-underline {
  height: calc(#{$h-info} / 100);
  width: calc(#{$w-info} / 8);
  grid-column: 1;

  .collection-filter--and & {
    background-color: $green-3;
    transform: translateX(0);
    transition: transform 300ms;
  }
  
  .collection-filter--not & {
    background-color: $brick-1;
    transform: translateX(#{$w-info-tab});
    transition: transform 300ms;
  }
  
  .collection-filter--or & {
    background-color: $violet-4;
    transform: translateX(calc(#{$w-info-tab} * 2));
    transition: transform 300ms;
  }
}

#filter-and {
  // color: $green-4;
  border-color: $green-4;
  grid-column: 1;
}

#filter-not {
  // color: $brick-2;
  border-color: $brick-1;
  grid-column: 2;
}

#filter-or {
  // color: $cappuccino-1;
  border-color: $violet-4;
  grid-column: 3;
}